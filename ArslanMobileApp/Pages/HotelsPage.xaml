<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArslanMobileApp.Pages.HotelsPage"
             Title="HotelsPage">
    <StackLayout>
        <Button Text="Refresh" Clicked="Button_Clicked"/>
        <CollectionView x:Name="Htls_CllView" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="175"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <HorizontalStackLayout Margin="2">
                            <!-- Image Layout -->
                            <Grid BackgroundColor="Aqua" HorizontalOptions="Start">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="135"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding ImageUrl}" Aspect="Fill"/>
                            </Grid>

                            <!-- Hotel Details Layout -->
                            <Grid BackgroundColor="Wheat">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="240"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Row="0" Text="{Binding Name}" TextColor="Black" FontSize="20" FontAttributes="Bold" Margin="10"/>
                                <Label Grid.Row="1" Text="{Binding Address}" TextColor="Black" FontSize="20" FontAttributes="Bold" Margin="10"/>
                                <Label Grid.Row="2" Text="{Binding StarSymbol}" TextColor="Black" FontSize="20" FontAttributes="Bold" Margin="10"/>
                                <Label Grid.Row="3" Text="{Binding Price}" TextColor="Black" FontSize="20" FontAttributes="Bold" Margin="10"/>
                            </Grid>
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage> 